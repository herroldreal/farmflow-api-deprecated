	"scripts": {
		"build": "nest build",
		"start": "nest start",
		"start:dev": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/app",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"test": "cross-env NODE_ENV=test jest --verbose ./tests --maxWorkers=1 --forceExit --detectOpenHandles --silent",
		"test:coverage": "jest ./tests --coverage --watchAll=false --maxWorkers=1 --forceExit --detectOpenHandles --silent",
		"serve": "npm run build && firebase emulators:start --only functions",
		"shell": "npm run build && firebase functions:shell",
		"deploy": "firebase deploy --only functions",
		"logs": "firebase functions:log",
		"doc:api": "npm run build && node dist/src/swagger",
		"prepare": "husky install"
	},
	"engines": {
		"node": "^18 || ^20"
	},
